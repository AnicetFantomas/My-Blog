<div class="posts">
    <img src="<%= @user.photo %>" />
    <h1><%= @user.name %></h1>
    <h2><%= @user.bio %></h2>
    <p><%= @user.posts_counter %></p>
    
    <% @posts.each do |post| %>
            <div class="schow_posts">
                <h3><%=post.title %></h3>
                <p><%=post.text %></p>
                <p>comment: <%=post.comments_counter %>
                <p>likes: <%=post.likes_counter %>
            </div>
    <% end %>
</div>