<div class="posts">
<a href ="<%=user_post_path%>">
    <% @posts.each do |post| %>
        <div class="schow_posts">
        <h3><%=post.title %></h3>
        <p><%=post.text %></p>
        <p><%=post.comments_counter %>
        <p><%=post.likes_counter %>
        <h3>Commetes</h3>
        <% post.comments.each do |comment| %>
            <p><%=comment.text %></p>
        <% end %>
        </div>
    <% end %>
    </a>
</div>